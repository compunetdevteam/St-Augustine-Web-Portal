@model IEnumerable<StAugustine.Models.Class>

@{
    ViewBag.Title = "Index";
}

<h2>List of Classes</h2>

<p>
    @Html.ActionLink("Create New", "Create", new {@class= "btn btn-primary btn-raised" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SchoolName)
        </th>
        <th>
            Class Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClassType)
        </th>
        <th>
            Full Class Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SchoolName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClassName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClassType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FullClassName)
        </td>
        <td>
            <span>
                <a href="@Url.Action("Edit", new {id = item.ClassId, @class = "btn btn-success" })"><span class="md-mode-edit"></span> Edit</a>
            </span> |
            @*@Html.ActionLink("Edit", "Edit", new {id = item.ClassId}) |*@
           
            <span>
                <a href="@Url.Action("Delete", new {id = item.ClassId, @class = "btn btn-success" })"><span class="md-delete"></span> Delete</a>
            </span>
            @*@Html.ActionLink("Delete", "Delete", new {id = item.ClassId})*@
        </td>
    </tr>
}

</table>
